<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Welcome to our app"
                android:textColor="#0E185F"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select State"
                android:textColor="#0E185F"
                android:textSize="30dp"
                android:textStyle="bold"v />

            <ImageView
                android:id="@+id/maha"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:src="@mipmap/maharatstra_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:text="Maharashtra"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/guj"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:src="@mipmap/guj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:text="Gujarat"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/raj"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:src="@mipmap/rajasthan_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:text="Rajasthan"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/him"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:src="@mipmap/himachal_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black"
                android:text="Himachal"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>